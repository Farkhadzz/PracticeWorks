<Window x:Class="QR_Creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QR_Creator"
        mc:Ignorable="d"
        Title="QR Creator BY Farkhad" Height="450" Width="500">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="QR :" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Niagara Solid"/>

        <Image x:Name="QRImage" Grid.Row="1" Height="200" Width="200"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Create QR" Grid.Row="3" Height="30" Width="70" Click="Create_Click"/>
            <TextBox x:Name="QRText" Height="30" Width="160" FontSize="16"/>
        </StackPanel>

    </Grid>
    
</Window>
